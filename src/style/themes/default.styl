@import url(http://fonts.googleapis.com/css?family=Ubuntu:400,700,400italic,700italic)

@media all

  body
    font-family Ubuntu, Arial, sans-serif
    line-height 1.425
  small
    font-size 0.5em
    display block
    color rgba(#444, 0.8)
  s, .out
    color rgba(#444, 0.8)
    text-decoration line-through !important
  sub, sup
    font-size 0.65em
  input, output, button, keygen, select
    font-size inherit
  .clear
    clear both
  pre, code
    font-family Monaco, "Bitstream Vera Sans Mono", "DejaVu Sans Mono" "Lucida Console", Consolas, Terminal, monospace
  pre.prettyprint
    border none
  .pikSlide:first-child
    text-align center
  p.footnotes
    text-align left
    font-size 0.5em
  p.attribution
    font-size 0.4em
    padding 0.1em 0.3em
    position absolute
    bottom -0.5em
    right 1em
    background rgba(#FFF, 0.8)
    color #000
  iframe
    display none
    border none
  .pikCurrent iframe
    display block

  // Google code prettify
  .pln { color: #000; }
  .str { color: #060; }
  .kwd { color: #009; font-weight: bold; }
  .com { color: #900; font-style: italic; }
  .dec, .typ { color: #909; font-weight: bold; }
  .lit { color: #044; }
  .pun, .opn, .clo { color: #440; }
  .tag { color: #00C; font-weight: bold; }
  .atn { color: #000; }
  .atv { color: #090; }
  mark span
    &.pln, &.str, &.kwd, &.com, &.dec, &.typ, &.lit, &.pun, &.opn, &.clo, &.tag, &.atn, &.atv
      color #000
  s
    text-decoration none
    span
      &.pln, &.str, &.kwd, &.com, &.dec, &.typ, &.lit, &.pun, &.opn, &.clo, &.tag, &.atn, &.atv
        color #AAA


@media screen

  body
    background #CFCFCF
    color #444
  #PikSlides .pikSlide
    box-sizing border-box
    font-size 0.85em
    background #FFF
    box-shadow 0 0 1.5em -0.5em #999
    width 96%
    height 97%
    margin 1% 2%
    padding 0.5em 1.5em
    // Special slide styles
    &:first-child
      text-align center
    &.invisible
      background transparent
      box-shadow none
    // Centered content by way of flexbox
    &.center
      // This works in Chrome - if anyone can help out with other browsers...
      display -webkit-flex
      display -ms-flexbox
      display flex
      -webkit-flex-direction column
      -webkit-justify-content space-around
      -ms-flex-direction column
      -ms-flex-pack distribute
      flex-direction column
      justify-content space-around
      text-align center
      > *
        margin 0 auto
        text-align center
      >
        pre, p
          width 100% !important
    .left
      text-align left
    // Filling background image
    &.image
      background-size contain
      background-repeat no-repeat
      background-position center center
      img
        display none

  .left
    text-align left
  .right
    text-align right
  .fill
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none

  // Typo
  h1
    color #000
    font-size 2.5em
    margin-top 0.4em
    margin-bottom 0.25em
    span
      display block
      font-size 0.5em
      margin-bottom 0.25em
    + p
      font-size 1.5em
      font-style italic
  .pikSlide:first-child h1
    font-size 3.5em
  h2
    font-size 1.4em
    line-height 1.15
    font-weight bold
    font-size 1.725em
    margin-top 0.25em
    margin-bottom 0
  h3
    margin 1em 0

  p, ul, ol, p, pre, table
    margin 1.25em 0
  ul
    padding-left 1em
  ol ol
    list-style-type lower-alpha
  ul, ol
    ul, ol
      margin-left 1em
  ul ul, ol ol, ul ol, ol ul, li
    margin-top 0.425em
    margin-bottom 0.425em

  table
    border-collapse collapse
  table.center
    margin-right auto
    margin-left auto
  th, td
    padding 0.2em 0.5em
  table:not(.noborder) th:not(:last-child), table:not(.noborder) td:not(:last-child)
    border-right 0.1em solid #444
  table:not(.noborder) tr:first-child th
    border-bottom 0.1em solid #444
  tr:not(:first-child) th:first-child
    text-align right

  a
    color #083
    text-decoration none
    font-weight bold
    cursor pointer
    &:link, &:visited
      border-bottom 0.1em solid #083
    &:visited
      border-bottom 0.1em dotted #083
    &:hover, &:active
      color #000
      border-bottom 0.1em solid transparent
    &:focus
      outline 0
      color #FFF
      background #083
    &.imagelink
      border-bottom none
    code
      color inherit
      background none

  mark
    background yellow
    color #000
  pre.diff mark:nth-of-type(1) { background: yellow }
  pre.diff mark:nth-of-type(2), mark.green { background: lighten(lime, 10%) }
  pre.diff mark:nth-of-type(3), mark.magenta { background: lighten(fuchsia, 40%) }
  pre.diff mark:nth-of-type(4), mark.blue { background: aqua }
  pre.diff mark:nth-of-type(5), mark.red { background: tomato }
  span.box
    display inline-block
    border 0.1em solid #666
    padding 0.2em
  .yes
    color green
  .no
    color #C00

  pre, code
    font-family Monaco, "Bitstream Vera Sans Mono", "DejaVu Sans Mono" "Lucida Console", Consolas, Terminal, monospace
  pre
    overflow hidden
    line-height 1.4
    text-align left !important
    font-size 0.75em
  code
    background #EBEBEB
    color #333
    padding 0.1em
    font-size 0.95em
  pre code, mark code
    background none
    padding 0
  blockquote, q
    font-style italic
    text-align left
  q
    quotes "\201E" "\201C" "\201A" "\2018"
  blockquote + p.cite
    text-align left !important // Override .center > *
    font-size 0.8em !important // Override .center > *
    margin-top -0.5em !important // Override .center > *
    margin-bottom 2em !important // Override .center > *

  kbd
    font normal .85em/1 "Lucida Grande", Lucida, Arial, sans-serif
    border-radius 0.2em
    border none
    background rgb(250, 250, 250)
    background linear-gradient(rgb(210, 210, 210), rgb(255, 255, 255))
    color rgb(50, 50, 50)
    text-shadow 0 0 2px rgb(255, 255, 255)
    box-shadow inset 0 0 1px rgb(255, 255, 255), inset 0 0 0.4em rgb(200, 200, 200), 0 0.1em 0 rgb(130, 130, 130), 0 0.11em 0 rgba(0, 0, 0, 0.4), 0 0.1em 0.11em rgba(0, 0, 0, 0.9)
    display inline-block
    line-height 1
    padding 0.2em 0.3em


  // Fancy slide transitions
  #PikSlides.fancy
    #PikSlideWrapper
      overflow visible
    .pikSlide
      -webkit-transform translateX(-204%)
      -webkit-transition all 400ms cubic-bezier(0, 0.5, 0.3, 1)
      transform translateX(-204%)
      transition all 400ms cubic-bezier(0, 0.5, 0.3, 1)
    .pikSlide.pikCurrent
      z-index 9000
      -webkit-transform translateX(0)
      transform translateX(0)
    .pikSlide.pikPrev
      visibility visible
      -webkit-transform translateX(-102%)
      transform translateX(-102%)
    .pikSlide.pikNext
      visibility visible
      -webkit-transform translateX(102%)
      transform translateX(102%)
    .pikSlide.pikNext ~ .pikSlide
      visibility visible
      -webkit-transform translateX(204%)
      transform translateX(204%)
    .pikSlide.pikNext ~ .pikSlide ~ .pikSlide
      visibility hidden
      display none


@media print
  mark
    text-decoration underline